{
  "compileOnSave": true,
  "compilerOptions": {
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "downlevelIteration": true,
    "lib": ["es2018", "es2017", "es2016", "es2015", "dom"],
    "outDir": "./dist",
    "declaration": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "website/**/*", "dist"]
}
